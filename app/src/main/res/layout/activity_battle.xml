<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BattleActivity">

    <Button
        android:id="@+id/run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="294dp"
        android:layout_marginTop="638dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="monospace"
        android:text="run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yourPlatform"
        android:layout_width="316dp"
        android:layout_height="165dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toTopOf="@+id/run"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/platform" />

    <ImageView
        android:id="@+id/opponentPlatform"
        android:layout_width="385dp"
        android:layout_height="122dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/platform" />

    <ImageView
        android:id="@+id/challenmander"
        android:layout_width="475dp"
        android:layout_height="383dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/run"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/challenmanderback" />
</androidx.constraintlayout.widget.ConstraintLayout>