<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/battlebg"
    tools:context=".BattleActivity">

    <ImageView
        android:id="@+id/silasria"
        android:layout_width="183dp"
        android:layout_height="188dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="220dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/silasria"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/mohammaunt"
        android:layout_width="165dp"
        android:layout_height="154dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="240dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mohammaunt"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/mingnectric"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="240dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mingnectric"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/jishking"
        android:layout_width="197dp"
        android:layout_height="182dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="232dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jishking"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/healotic"
        android:layout_width="188dp"
        android:layout_height="184dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="220dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/healotic"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/nercoal"
        android:layout_width="164dp"
        android:layout_height="181dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="224dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nercoal"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/vinithyama"
        android:layout_width="180dp"
        android:layout_height="186dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="222dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vinithyama"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/aabass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="220dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aabass"
        tools:visibility="gone" />

    <ProgressBar
        android:id="@+id/pokemonHealth"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="74dp"
        android:layout_height="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="28dp"
        android:max="100"
        android:progress="100"
        android:progressTint="#4FDF27"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/challenmander"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/pokemonHealth2"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="74dp"
        android:layout_height="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="277dp"
        android:max="100"
        android:progress="100"
        android:progressTint="#4FDF27"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/opponentHealth"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="74dp"
        android:layout_height="8dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="65dp"
        android:max="100"
        android:progress="100"
        android:progressTint="#4FDF27"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/battleText"
        android:layout_width="168dp"
        android:layout_height="172dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="575dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/fight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/challenmander"
        android:layout_width="208dp"
        android:layout_height="177dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/challenmanderback" />

    <ImageView
        android:id="@+id/nordle"
        android:layout_width="199dp"
        android:layout_height="202dp"
        android:layout_marginTop="360dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backsidenordle" />

    <Button
        android:id="@+id/run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="294dp"
        android:layout_marginTop="610dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="monospace"
        android:text="RUN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="POKEMON"
        app:layout_constraintBottom_toBottomOf="@+id/run"
        app:layout_constraintEnd_toStartOf="@+id/bag" />

    <Button
        android:id="@+id/bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="BAG"
        app:layout_constraintStart_toStartOf="@+id/run"
        app:layout_constraintTop_toTopOf="@+id/fight" />

    <Button
        android:id="@+id/fight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:text="FIGHT"
        app:layout_constraintBottom_toTopOf="@+id/run"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/yes"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="YES"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/pokemon"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pokemon"
        tools:visibility="visible" />

    <Button
        android:id="@+id/no"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="NO"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/pokemon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pokemon"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>